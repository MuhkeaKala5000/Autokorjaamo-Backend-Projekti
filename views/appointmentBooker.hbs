<div class="main-content">
<h1 id="booking-heading">Ajanvaraus</h1>

<form action='/appointmentBooker' method='POST' aria-labelledby="booking-heading">
  <div>
    <label for='asiakas_nimi'>Nimi:</label>
    <input type='text' id='asiakas_nimi' name='name' required autocomplete="name">
  </div>

  <div>
    <label for='asiakas_email'>Sähköposti:</label>
    <input type='email' id='asiakas_email' name='email' required autocomplete="email">
  </div>

  <div>
    <label for='service_id'>Palvelu:</label>
    <select name='service_id' id='service_id' required>
      <option disabled selected value="">Valitse palvelu</option>
      {{#each services}}
        <option value='{{this._id}}'>
          {{this.nimi}} ({{this.hinta_euro}}€, {{this.kesto_min}} min)
        </option>
      {{/each}}
    </select>
  </div>

  <div>
    <label for='mechanic_id'>Mekaanikko:</label>
    <select name='mechanic_id' id='mechanic_id' required>
      <option disabled selected value="">Valitse mekaanikko</option>
      {{#each mechanics}}
        <option value='{{this._id}}'>{{this.nimi}}</option>
      {{/each}}
    </select>
  </div>

  <div>
    <label for='varattu_aika'>Aika:</label>
    <input type='datetime-local' id='varattu_aika' name='datetime' required>
  </div>

  <button type='submit'>Varaa aika</button>
</form>
</div>
